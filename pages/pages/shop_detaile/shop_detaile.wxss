.container{
  background-color: #EDEDF0;
}

  /* <!-- 头部图片产地 --> */
.header{
  width: 100%;
  height: 480rpx;
  display: flex;
  flex-direction:column;
}
.headImage{
  width: 100%;
  height: 400rpx;
}

.allTxt{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}

.production_title{
  padding-right: 20rpx;
  padding-left: 20rpx;
  font-size: 32rpx;
}

.production_title_detaile{
  font-size: 26rpx;
}

  /* <!-- 简介 --> */
.abstract{
  width: 100%;
}

.head_view{
  width: 100%;
  background: white;
  display: flex;
  flex-direction:column;
  position: relative;
}

.head_line{
  height: 3rpx;
  margin-left: 10rpx;
  margin-right: 10rpx; 
  background-color: black;
}

.head_title{
  padding-right: 20rpx;
  padding-left: 20rpx;
  font-size: 35rpx;
  line-height: 77rpx;
}

.brewing_image{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 20rpx;
  top: 18rpx;
}

.detaile_text_out {
  margin-right: 20rpx;
  margin-left: 20rpx;
  padding-bottom: 20rpx;
}

.detaile_text{
  word-wrap:break-word; 
  word-break:break-all;
  font-size: 26rpx;
}

  /* <!-- 冲泡方法 --> */
.brewing_method{
  width: 100%;
}

.brewing_offset_text{
  height: 50rpx;
  line-height: 50rpx;
}

.brewing_method_detaile_out {
    width: 100%;
}

  /* <!-- 高清图集 --> */
.photos{
  width: 100%;
  height: 200rpx;
  background: yellow;
}